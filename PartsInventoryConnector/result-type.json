{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "horizontalAlignment": "center",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "Image",
              "url": "${icon}",
              "size": "medium",
              "altText": "Product image"
            }
          ]
        },
        {
          "type": "Column",
          "width": 50,
          "items": [
            {
              "type": "TextBlock",
              "text": "[${name} (Part #${partNumber})](${productUrl})",
              "color": "accent",
              "size": "medium",
              "spacing": "none",
              "$when": "${name != \"\"}"
            },
            {
              "type": "TextBlock",
              "text": "${description}",
              "wrap": true,
              "maxLines": 3,
              "$when": "${description != \"\"}"
            }
          ],
          "horizontalAlignment": "left"
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "FactSet",
              "facts": [
                {
                  "title": "Price",
                  "value": "$${price}"
                },
                {
                  "title": "Current Inventory",
                  "value": "${inventory} units"
                }
              ]
            }
          ],
          "spacing": "none",
          "horizontalAlignment": "right"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}
